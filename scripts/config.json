{
    "problem_sources": { 
        "textbook": {
            "standard_tex_files": ["statement", "solution"],
            "directory_levels": 3 
        }
    },
    "document_types": { 
        "hw-solutions": {
            "default_directory": "homework/@title@",
            "default_filename": "@title@-solutions.tex",
            "includes": ["global", "course-info", "probimport", "hw-solutions"],
            "autogenerated": "homework_problems.json"
        },
        "quiz": {
            "default_directory": "quizzes/@title@",
            "default_filename": "@title@.tex",
            "includes": ["global", "course-info", "probimport"]
        },
        "lecture-notes": {
            "default_directory": "materials/@section@",
            "default_filename": "@section@-notes.tex",
            "includes": ["global", "course-info", "probimport"]
        },
        "worksheet": {
            "default_directory": "materials/@section@",
            "default_filename": "@section@-worksheet.tex",
            "includes": ["global", "course-info", "probimport"]
        },
        "test": {
            "default_directory": "tests/@title@",
            "default_filename": "@title@.tex",
            "includes": ["global", "course-info", "probimport"]
        },
        "slides": {
            "default_directory": "materials/@section@",
            "default_filename": "@section@-slides.tex",
            "includes": ["slides", "global", "course-info"]
        },
        "clicker-questions": {
            "default_directory": "clicker-questions/@title@",
            "default_filename": "@title@.tex",
            "includes": ["slides", "global", "course-info"]
        }
    }
}